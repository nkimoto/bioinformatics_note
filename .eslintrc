{
    "root": true,
    "env": {
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "prettier",
        "vue"
    ],
    "rules": {
        "no-unused-vars": [
            2,
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": false
            }
        ]
    }
}